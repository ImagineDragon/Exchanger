@model Exchanger.Models.ShareFileModel

@{
    Layout = null;
    ViewBag.Title = "ShareFile";
}

@Html.AntiForgeryToken()

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.FileName, new {@class = "col-md-4 control-label"})
            <div class="col-md-8" style="padding-top: 7px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; max-width: 205px;">
                @Html.DisplayFor(model => model.FileName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Login, new {@class = "col-md-4 control-label"})
            <div class="col-md-8" style="padding-top: 7px;">
                @Html.DropDownListFor(model => model.Login, new SelectList(Model.Login, "Login"))
            </div>
        </div>

