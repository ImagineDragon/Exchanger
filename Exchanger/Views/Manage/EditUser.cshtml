@model Exchanger.Models.EditUserModel

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("EditUser", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new {@class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ParentName, new {@class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.EditorFor(m => m.ParentName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address, new {@class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Phone, new {@class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new {@class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessage("*")
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Website, new {@class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.EditorFor(m => m.Website, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    if (Session["Id"].ToString() == Model.Id.ToString())
    {
        <div class="form-group">
            @Html.Label("Password", new {@class = "col-md-4 control-label" })
            <div class="col-md-8" style = "padding-top: 7px;">
                @Html.ActionLink("Change password", "ChangePassword")
            </div>
        </div>
    }
    if (Session["UserTypeId"].ToString() == "2")
    {
        <div class="form-group">
            @Html.LabelFor(m => m.UserType, new { @class = "col-md-4 control-label" })
            <div class="col-md-8" style = "padding-top: 7px;">
                @Html.DropDownListFor(m => m.UserType, new SelectList(Model.UserType, "Name"), new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    }
    <div class="form-group">
        <div class="text-center">
            <input type="submit" class="btn btn-default" value="Save" />
            @if (Session["UserTypeId"].ToString() == "2")
            {
                @Html.ActionLink("Cancel", "AdminPage", "Manage");
            }
            else
            {
                @Html.ActionLink("Cancel", "HomePage", "Home");
            }
        </div>
    </div>
}
